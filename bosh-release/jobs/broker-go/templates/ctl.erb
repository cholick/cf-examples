#!/bin/bash

RUN_DIR=/var/vcap/sys/run/kv-example-broker
LOG_DIR=/var/vcap/sys/log/kv-example-broker
PIDFILE=${RUN_DIR}/pid

case $1 in

start)
mkdir -p $RUN_DIR $LOG_DIR
chown -R vcap:vcap $RUN_DIR $LOG_DIR

echo $$ > $PIDFILE

cd /var/vcap/packages/kv-example-broker

export SECURITY_USER_NAME="<%= p('kv.broker.auth.username') %>"
export SECURITY_USER_PASSWORD="<%= p('kv.broker.auth.password') %>"

env >> $LOG_DIR/broker.stdout.log

exec /var/vcap/packages/kv-example-broker/main \
  >>  $LOG_DIR/broker.stdout.log \
  2>> $LOG_DIR/broker.stderr.log

;;

stop)
kill -9 `cat $PIDFILE`
rm -f $PIDFILE

;;

*)
echo "Usage: ctl {start|stop}" ;;

esac
